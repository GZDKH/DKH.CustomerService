{
  "plansDirectory": "./docs/plans",
  "language": "russian",
  "showTurnDuration": true,
  "spinnerTipsEnabled": true,
  "env": {
    "ENABLE_TOOL_SEARCH": "auto:5",
    "BASH_DEFAULT_TIMEOUT_MS": "120000"
  },
  "permissions": {
    "allow": [
      "run_shell_command(dotnet *)",
      "run_shell_command(pwsh *)",
      "run_shell_command(buf *)",
      "run_shell_command(git status)",
      "run_shell_command(git status *)",
      "run_shell_command(git diff)",
      "run_shell_command(git diff *)",
      "run_shell_command(git log *)",
      "run_shell_command(git branch *)",
      "run_shell_command(git fetch *)",
      "run_shell_command(git remote *)",
      "run_shell_command(git add *)",
      "run_shell_command(git commit *)",
      "run_shell_command(git tag *)",
      "run_shell_command(git stash *)",
      "run_shell_command(git show *)",
      "run_shell_command(git rev-parse *)",
      "run_shell_command(git describe *)",
      "run_shell_command(git -C *)",
      "run_shell_command(npm *)",
      "run_shell_command(pnpm *)",
      "run_shell_command(npx *)",
      "run_shell_command(node *)",
      "run_shell_command(gh *)",
      "run_shell_command(docker ps *)",
      "run_shell_command(docker logs *)",
      "run_shell_command(docker compose *)",
      "run_shell_command(ls *)",
      "run_shell_command(cat *)",
      "run_shell_command(head *)",
      "run_shell_command(tail *)",
      "run_shell_command(wc *)",
      "run_shell_command(which *)",
      "run_shell_command(echo *)",
      "run_shell_command(find *)",
      "run_shell_command(grep *)",
      "run_shell_command(curl *)",
      "run_shell_command(md5 *)",
      "run_shell_command(python3 *)",
      "run_shell_command(xargs *)",
      "run_shell_command(git pull *)",
      "run_shell_command(git mv *)",
      "WebSearch",
      "mcp__filesystem__list_directory",
      "mcp__filesystem__read_multiple_files",
      "mcp__filesystem__read_text_file",
      "mcp__filesystem__directory_tree",
      "mcp__filesystem__list_allowed_directories",
      "mcp__filesystem__search_files",
      "mcp__filesystem__create_directory",
      "mcp__filesystem__edit_file",
      "mcp__filesystem__write_file",
      "mcp__github__get_issue",
      "mcp__github__list_issues",
      "mcp__github__create_issue",
      "mcp__github__get_file_contents",
      "mcp__github__list_commits",
      "mcp__github__search_issues",
      "mcp__context7__resolve-library-id",
      "mcp__context7__query-docs"
    ],
    "ask": [
      "run_shell_command(git push *)",
      "run_shell_command(git reset *)",
      "run_shell_command(git checkout *)",
      "run_shell_command(git rebase *)",
      "run_shell_command(git merge *)",
      "run_shell_command(rm -rf *)",
      "run_shell_command(docker rm *)",
      "run_shell_command(docker rmi *)"
    ],
    "deny": [
      "Read(**/.env.local)",
      "Read(**/secrets/**)",
      "Read(**/*.pem)",
      "Read(**/*.key)"
    ],
    "additionalDirectories": [
      "../../libraries/DKH.Architecture",
      "../../DKH.Infrastructure",
      "../../libraries/DKH.Platform"
    ]
  },
  "hooks": {
    "AfterTool": [
      {
        "matcher": "run_shell_command",
        "hooks": [
          {
            "type": "command",
            "command": "if [ $exit_code -ne 0 ]; then echo '⚠️ Command failed with exit code: '$exit_code; fi"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "context7@gemini-plugins-official": true,
    "csharp-lsp@gemini-plugins-official": true,
    "github@gemini-plugins-official": true,
    "code-review@gemini-plugins-official": true,
    "commit-commands@gemini-plugins-official": true,
    "feature-dev@gemini-plugins-official": true
  }
}
